@{
    ViewData["Title"] = "Home Page";
}
@model List<Book>

<table cellspacing="20">
    @for (int i = 0; i < Model.Count; i++)
    {
        <tr>
            <td>
                <a asp-controller="books" asp-action="Show" asp-route-id="@Model[i].BookId">
                    <div class="BookBackground">
                        <img class="BookImage" src="D:\intro_logo.svg" alt="Изображение не найдено">
                        <p class="Price"> @Model[i].BookPrice </p>
                        <p class="BookName"> @Model[i].BookName </p>
                    </div>
                </a>
            </td>
        </tr>
    }
</table>